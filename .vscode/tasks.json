	"version": "2.0.0",
	"tasks": [
		{
			"label": "git publish changes",
			"type": "shell",
			"command": "git",
			"args": [
				"--no-pager",
				"status"
			],
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Iniciar servidor local HTTP",
			"type": "shell",
			"command": "python",
			"args": [
				"-m",
				"http.server",
				"8000"
			],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "cleanup: remove demo and backup_links",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-Command",
				"Remove-Item -LiteralPath 'demo','backup_links' -Recurse -Force -ErrorAction SilentlyContinue; Write-Output 'CLEANUP_DONE'"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "cleanup: remove unused files",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-Command",
				"$ErrorActionPreference='SilentlyContinue'; Remove-Item -LiteralPath 'estilos-movil.css','links.css','links-data.js','estilo.json' -Force; Remove-Item -LiteralPath 'js/links-remote-config.js' -Force; Remove-Item -LiteralPath 'js/modules/pages' -Recurse -Force; Remove-Item -LiteralPath 'js/modules/links.js' -Force; Write-Output 'CLEANUP_UNUSED_DONE'"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
